          var floatBtn = document.getElementById('quickApplyFloatBtn');
          var modalBg = document.getElementById('quickApplyModalBg');
          var modalClose = document.getElementById('quickApplyModalClose');
          floatBtn.addEventListener('click', function() {
            modalBg.classList.add('active');
          });
          modalClose.addEventListener('click', function() {
            modalBg.classList.remove('active');
          });
          modalBg.addEventListener('click', function(e) {
            if (e.target === modalBg) modalBg.classList.remove('active');
          });
        })();
