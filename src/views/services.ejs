    <link rel="icon" type="image/jpeg" href="/public/img/logo.jpg" />
    <link rel="stylesheet" href="/public/styles.css" />
    <style>
      .services-hero-heading {
        font-size: 1.6rem;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
      }
      .services-intro {
        font-size: 1.05rem;
        line-height: 1.75;
        color: var(--text);
      }
      .section h3 {
        font-size: 1.18rem;
        color: var(--primary-dark);
        position: relative;
        padding-bottom: var(--space-sm);
        margin-bottom: var(--space-xl);
      }
      .section h3::after {
        content: '';
        display: block;
        width: 40px;
        height: 3px;
        background: var(--gradient-accent);
        border-radius: 2px;
        margin-top: var(--space-sm);
      }
      .service-card {
        padding: var(--space-2xl) var(--space-xl) var(--space-xl);
      }
      .service-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        font-size: 1.35rem;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast);
      }
      .service-card:hover .service-icon {
        transform: scale(1.1) rotate(-4deg);
        box-shadow: 0 6px 20px rgba(24,70,163,0.28);
      }
      .service-card h4 {
        font-size: 1.08rem;
        margin-top: var(--space-sm);
      }
      .why-list li {
        padding: 10px 0;
        border-bottom: 1px solid var(--border-light);
        line-height: 1.6;
      }
      .why-list li:last-child { border-bottom: none; }
      .why-list li strong {
        color: var(--primary);
      }
      .services-cta-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
        color: var(--primary);
        text-decoration: none;
        padding: 8px 20px;
        border-radius: var(--radius-sm);
        background: rgba(24,70,163,0.06);
        transition: all var(--transition-fast);
      }
      .services-cta-link:hover {
        background: var(--gradient-primary);
        color: #fff;
      }
      .industries-list li {
        padding: 8px 0;
        border-bottom: 1px solid var(--border-light);
      }
      .industries-list li:last-child { border-bottom: none; }
      .industries-list li::marker {
        color: var(--primary-light);
      }
    </style>
  </head>
