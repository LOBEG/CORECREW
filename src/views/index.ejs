    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <style>
      /* ===== BASE ===== */
      *, *::before, *::after { box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      html, body { font-size: 15px; margin: 0; padding: 0; }
      @media (max-width: 768px) { html, body { font-size: 13px; } }
      @media (max-width: 480px) { html, body { font-size: 12px; } }

      /* ===== ANIMATIONS ===== */
      @keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(3deg); }
      }
      @keyframes floatReverse {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(15px) rotate(-2deg); }
      }
      @keyframes pulse-dot {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.8); opacity: 0.4; }
      }
      @keyframes gradient-shift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      @keyframes slideUp {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
      }
      @keyframes bannerPulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.85; }
      }
      @keyframes shimmer {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
      }

      /* ===== NOW HIRING BANNER ===== */
      .now-hiring-banner {
        width: 100%;
        background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 30%, var(--accent-green) 70%, var(--primary) 100%);
        background-size: 200% 100%;
        animation: gradient-shift 6s ease infinite, bannerPulse 3s ease-in-out infinite;
        color: #fff;
        text-align: center;
        font-weight: 700;
        letter-spacing: 0.05em;
        font-size: 1.08rem;
        padding: 12px 16px;
        position: relative;
        z-index: 999;
      }
      .now-hiring-banner span { display: inline-block; vertical-align: middle; }
      .now-hiring-banner a {
        color: #fff;
        text-decoration: underline;
        text-underline-offset: 3px;
        font-weight: 800;
        margin-left: 8px;
        transition: color 0.2s ease;
      }
      .now-hiring-banner a:hover { color: #d4f5e0; }
      @media (max-width: 768px) { .now-hiring-banner { font-size: 0.98rem; padding: 9px 12px; } }
      @media (max-width: 480px) { .now-hiring-banner { font-size: 0.93rem; padding: 7px 10px; } }

      /* ===== HERO SECTION ===== */
      .hero {
        position: relative;
        overflow: hidden;
        background: linear-gradient(168deg, #ffffff 0%, #f8faff 40%, #f0f5ff 100%);
        padding: 110px 0 90px;
        min-height: 560px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(ellipse at 30% 50%, rgba(37,99,235,0.07) 0%, transparent 60%),
                    radial-gradient(ellipse at 70% 20%, rgba(46,204,113,0.05) 0%, transparent 50%),
                    radial-gradient(ellipse at 80% 80%, rgba(24,70,163,0.04) 0%, transparent 40%);
        pointer-events: none;
      }
      .hero-particles {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
      }
      .hero-particle {
        position: absolute;
        border-radius: 50%;
        opacity: 0.06;
      }
      .hero-particle:nth-child(1) {
        width: 300px; height: 300px;
        background: var(--accent-green);
        top: -60px; right: -80px;
        animation: float 8s ease-in-out infinite;
      }
      .hero-particle:nth-child(2) {
        width: 200px; height: 200px;
        background: var(--primary-lighter);
        bottom: -40px; left: -60px;
        animation: floatReverse 10s ease-in-out infinite;
      }
      .hero-particle:nth-child(3) {
        width: 120px; height: 120px;
        background: var(--primary-light);
        top: 40%; left: 60%;
        animation: float 12s ease-in-out infinite 2s;
        opacity: 0.04;
      }
      .hero-particle:nth-child(4) {
        width: 80px; height: 80px;
        background: var(--accent-green);
        top: 20%; left: 15%;
        animation: floatReverse 9s ease-in-out infinite 1s;
        opacity: 0.05;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      }
      .hero-particle:nth-child(5) {
        width: 160px; height: 160px;
        background: var(--primary-light);
        bottom: 10%; right: 20%;
        animation: float 11s ease-in-out infinite 3s;
        opacity: 0.04;
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      }
      .hero-content {
        position: relative;
        z-index: 2;
        max-width: 820px;
        margin: 0 auto;
        text-align: center;
        padding: 0 24px;
        animation: slideUp 0.8s ease both;
      }
      .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(24,70,163,0.06);
        border: 1px solid rgba(24,70,163,0.12);
        border-radius: 100px;
        padding: 6px 16px;
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 24px;
        letter-spacing: 0.03em;
      }
      .hero-badge-dot {
        width: 8px;
        height: 8px;
        background: var(--accent-green);
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
      }
      .hero-title {
        font-size: 3.8rem;
        font-weight: 900;
        color: var(--primary-dark);
        line-height: 1.08;
        margin: 0 0 24px;
        letter-spacing: -0.03em;
      }
      .hero-title-line {
        display: block;
      }
      .hero-title-accent {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .hero-desc {
        font-size: 1.25rem;
        color: var(--text-muted);
        line-height: 1.75;
        max-width: 620px;
        margin: 0 auto 40px;
      }
      .hero-actions {
        display: flex;
        gap: 14px;
        justify-content: center;
        flex-wrap: wrap;
      }
      .hero-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 32px;
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.25s cubic-bezier(.4,0,.2,1);
        border: none;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        letter-spacing: 0.01em;
        box-shadow: none;
      }
      .hero-btn:hover,
      .hero-btn:active,
      .hero-btn:focus {
        text-decoration: none;
        box-shadow: none;
      }
      .hero-btn-primary {
        background: var(--primary);
        color: #fff;
      }
      .hero-btn-primary:hover,
      .hero-btn-primary:active {
        background: var(--primary-dark);
        color: #fff;
        text-decoration: none;
        box-shadow: none;
      }
      .hero-btn-primary:focus-visible {
        background: var(--primary-dark);
        color: #fff;
        text-decoration: none;
        box-shadow: none;
        outline: 2px solid rgba(255, 255, 255, 0.85);
        outline-offset: 2px;
      }
      .hero-btn-accent {
        background: var(--accent-green);
        color: #fff;
      }
      .hero-btn-accent:hover,
      .hero-btn-accent:active {
        background: var(--accent-green-dark);
        color: #fff;
        text-decoration: none;
        box-shadow: none;
      }
      .hero-btn-accent:focus-visible {
        background: var(--accent-green-dark);
        color: #fff;
        text-decoration: none;
        box-shadow: none;
        outline: 2px solid rgba(255, 255, 255, 0.85);
        outline-offset: 2px;
      }
      .hero-btn-ghost {
        background: transparent;
        color: var(--primary);
        border: 2px solid var(--border);
      }
      .hero-btn-ghost:hover,
      .hero-btn-ghost:active {
        background: var(--surface-dark);
        border-color: var(--primary-light);
        color: var(--primary);
        text-decoration: none;
        box-shadow: none;
      }
      .hero-btn-ghost:focus-visible {
        background: var(--surface-dark);
        border-color: var(--primary-light);
        color: var(--primary);
        text-decoration: none;
        box-shadow: none;
        outline: 2px solid var(--primary-light);
        outline-offset: 2px;
      }
      @media (max-width: 768px) {
        .hero { padding: 80px 0 60px; min-height: 420px; }
        .hero-title { font-size: 2.5rem; }
        .hero-desc { font-size: 1.08rem; }
        .hero-btn { padding: 12px 24px; font-size: 0.92rem; }
      }
      @media (max-width: 480px) {
        .hero { padding: 60px 0 44px; min-height: 360px; }
        .hero-title { font-size: 2rem; }
        .hero-actions { flex-direction: column; align-items: center; }
      }

      /* ===== STATS SECTION ===== */
      .stats-section {
        padding: 70px 24px;
        background: linear-gradient(180deg, #f8faff 0%, #ffffff 100%);
        position: relative;
      }
      .stats-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border), transparent);
      }
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
        max-width: 1100px;
        margin: 0 auto;
      }
      .stat-card {
        background: #fff;
        border: 1px solid var(--border-light);
        border-radius: var(--radius-lg);
        padding: 36px 24px;
        text-align: center;
        transition: all 0.4s cubic-bezier(.4,0,.2,1);
        position: relative;
        overflow: hidden;
      }
      .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
        border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        opacity: 0;
        transition: opacity 0.3s ease;
      }
      .stat-card:hover::before { opacity: 1; }
      .stat-card:hover {
        transform: translateY(-8px);
      }
      .stat-icon {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        background: linear-gradient(135deg, rgba(24,70,163,0.08), rgba(37,99,235,0.12));
        position: relative;
      }
      .stat-icon svg {
        width: 32px;
        height: 32px;
        stroke: var(--primary);
        stroke-width: 2;
      }
      .stat-pulse {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
        height: 8px;
        background: var(--accent-green);
        border-radius: 50%;
        animation: pulse-dot 2s ease-in-out infinite;
      }
      .stat-card .stat-number {
        font-size: 2.6rem;
        font-weight: 900;
        color: var(--primary);
        margin-bottom: 4px;
        letter-spacing: -0.02em;
      }
      .stat-card .stat-label {
        font-size: 0.9rem;
        color: var(--text-muted);
        font-weight: 600;
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }
      @media (max-width: 900px) { .stats-grid { grid-template-columns: repeat(2, 1fr); } }
      @media (max-width: 480px) {
        .stats-grid { grid-template-columns: 1fr; gap: 16px; }
        .stat-card { padding: 28px 20px; }
      }

      /* ===== SECTION HEADER ===== */
      .section-header {
        text-align: center;
        margin-bottom: 52px;
        position: relative;
      }
      .section-header::before {
        content: '';
        display: block;
        width: 48px;
        height: 4px;
        background: var(--gradient-primary);
        border-radius: 4px;
        margin: 0 auto 20px;
      }
      .section-title {
        font-size: 2.4rem;
        font-weight: 800;
        color: var(--text);
        margin: 0 0 12px;
        letter-spacing: -0.02em;
      }
      .section-subtitle {
        color: var(--text-muted);
        font-size: 1.1rem;
        max-width: 520px;
        margin: 0 auto;
        line-height: 1.6;
      }

      /* ===== WHAT WE DO ===== */
      .services-section {
        padding: 90px 24px;
        background: #fff;
        position: relative;
      }
      .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
        max-width: 1100px;
        margin: 0 auto;
      }
      .service-card {
        background: #fff;
        border-radius: var(--radius-lg);
        padding: 40px 30px;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(.4,0,.2,1);
        border: 1px solid var(--border-light);
      }
      .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        transition: height 0.3s ease;
      }
      .service-card:nth-child(1)::before { background: linear-gradient(90deg, var(--primary), var(--primary-lighter)); }
      .service-card:nth-child(2)::before { background: linear-gradient(90deg, var(--accent-green), #3ee68a); }
      .service-card:nth-child(3)::before { background: linear-gradient(90deg, var(--accent-orange), #f9c74f); }
      .service-card:hover {
        transform: translateY(-8px) scale(1.01);
      }
      .service-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 22px;
      }
      .service-card:nth-child(1) .service-icon { background: linear-gradient(135deg, rgba(24,70,163,0.1), rgba(37,99,235,0.15)); }
      .service-card:nth-child(2) .service-icon { background: linear-gradient(135deg, rgba(46,204,113,0.1), rgba(46,204,113,0.18)); }
      .service-card:nth-child(3) .service-icon { background: linear-gradient(135deg, rgba(247,183,49,0.1), rgba(247,183,49,0.18)); }
      .service-card h4 {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text);
        margin: 0 0 12px;
      }
      .service-card p {
        color: var(--text-muted);
        line-height: 1.75;
        font-size: 1rem;
        margin: 0;
      }
      @media (max-width: 768px) { .services-grid { grid-template-columns: 1fr; max-width: 480px; } }

      /* ===== CONTACT SECTION ===== */
      .contact-section {
        padding: 80px 24px 100px;
        background: linear-gradient(180deg, #ffffff 0%, #f8faff 100%);
        position: relative;
      }
      .contact-inner {
        max-width: 720px;
        margin: 0 auto;
        text-align: center;
      }
      .contact-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--text);
        margin: 0 0 14px;
      }
      .contact-desc {
        color: var(--text-muted);
        font-size: 1.1rem;
        line-height: 1.75;
        margin: 0 auto 36px;
        max-width: 540px;
      }
      .contact-links {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .contact-link {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 32px;
        background: rgba(24,70,163,0.04);
        border: 1px solid var(--border);
        border-radius: 100px;
        color: var(--primary);
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
      }
      .contact-link:hover {
        background: var(--primary);
        color: #fff;
        border-color: var(--primary);
        transform: translateY(-3px);
        text-decoration: none;
      }
      .contact-link:hover svg { stroke: #fff; }

      /* ===== QUICK APPLY FLOAT BTN ===== */
      .quick-apply-float-btn {
        position: fixed;
        right: 24px;
        bottom: 40px;
        z-index: 2001;
        background: var(--gradient-primary);
        color: #fff;
        border-radius: 10px;
        padding: 12px 24px;
        font-size: 0.92rem;
        font-weight: 700;
        border: none;
        cursor: pointer;
        transition: all 0.25s cubic-bezier(.4,0,.2,1);
        letter-spacing: 0.01em;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .quick-apply-float-btn:hover {
        transform: translateY(-3px);
      }

      /* ===== QUICK APPLY MODAL ===== */
      .quick-apply-modal-bg {
        display: none;
        position: fixed;
        top: 0; right: 0; bottom: 0; left: 0;
        background: rgba(10,22,40,0.45);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        padding: var(--space-md);
      }
      .quick-apply-modal-bg.active { display: flex; }
      .quick-apply-modal-content {
        background: rgba(255,255,255,0.98);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 1px solid var(--border-light);
        padding: var(--space-xl);
        width: 100%;
        max-width: 400px;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
        animation: scaleIn 0.3s ease both;
      }
      .quick-apply-modal-close {
        position: absolute;
        right: var(--space-md);
        top: var(--space-md);
        font-size: 1.3rem;
        color: var(--text-muted);
        cursor: pointer;
        background: var(--surface-dark);
        border: none;
        font-weight: 700;
        transition: all 0.2s;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
      }
      .quick-apply-modal-close:hover {
        color: var(--primary);
        background: var(--surface-darker);
        transform: rotate(90deg);
      }
      .quick-apply-modal-title {
        color: var(--primary);
        font-size: 1.3rem;
        font-weight: 800;
        margin: 0 0 8px;
      }
      .quick-apply-modal-desc {
        color: var(--primary);
        font-weight: 600;
        font-size: 0.95rem;
        margin: 0 0 16px;
        line-height: 1.5;
      }
      .quick-apply-card { display: none !important; }
      @media (max-width: 768px) {
        .quick-apply-float-btn { right: 12px; bottom: 12px; font-size: 0.88rem; padding: 10px 18px; }
        .quick-apply-modal-content { max-width: 95vw; }
      }
      @media (max-width: 600px) {
        .quick-apply-float-btn { font-size: 0.85rem; padding: 9px 16px; }
      }

      /* ===== FOOTER ===== */
      .site-footer { background: #0a1628 !important; }
      .footer-bottom {
        width: 100%;
        text-align: center !important;
        margin: 0 auto;
        padding: 16px 0 10px;
        color: rgba(255,255,255,0.45);
        font-size: 0.88rem;
        border-top: 1px solid rgba(255,255,255,0.06);
      }

      /* ===== HOMEPAGE HEADER OVERRIDE ===== */
      .home-header {
        background: #fff;
        border-bottom: 1px solid var(--border);
        box-shadow: none;
      }
      .home-header .brand .logo {
        box-shadow: none;
      }
      .home-header nav a.btn.primary.home-apply-btn {
        display: inline-flex !important;
        background: var(--primary);
        color: #fff;
        padding: 10px 22px;
        border-radius: var(--radius-sm);
        font-weight: 700;
        font-size: 0.95rem;
        text-decoration: none;
        transition: background var(--transition-fast);
      }
      .home-header nav a.btn.primary.home-apply-btn:hover {
        background: var(--primary-dark);
        color: #fff;
        text-decoration: none;
        box-shadow: none;
      }
      .home-header nav a.btn.primary.home-apply-btn:focus,
      .home-header nav a.btn.primary.home-apply-btn:active,
      .home-header nav a.btn.primary.home-apply-btn:focus-visible {
        background: var(--primary-dark);
        color: #fff;
        box-shadow: none;
        outline: 2px solid rgba(255, 255, 255, 0.85);
        outline-offset: 2px;
      }
      @media (max-width: 700px) {
        .home-header nav a.btn.primary.home-apply-btn {
          display: flex !important;
          margin-top: 8px;
        }
      }
    </style>
  </head>
  <body>

    <!-- ===== HEADER ===== -->
    <header class="site-header home-header">
      <div class="container">
        <a href="/" class="brand">
          <img class="logo" src="/public/img/logo.jpg" alt="Core Crew Logistics Logo" />
          <span>Core Crew Logistics</span>
