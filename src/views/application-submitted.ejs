<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Application Submitted â€” Core Crew Logistics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
  <link rel="icon" type="image/jpeg" href="/public/img/logo.jpg" />
  <link rel="stylesheet" href="/public/styles.css" />
  <style>
    /* Wizard progress indicator */
    .wizard-steps {
      display: flex;
      justify-content: center;
      margin-bottom: var(--space-3xl);
      gap: 0;
      counter-reset: step;
    }
    .wizard-step {
      font-weight: 600;
      color: var(--text-light);
      text-align: center;
      font-size: 0.85rem;
      position: relative;
      flex: 1;
      padding: 0 var(--space-sm);
      line-height: 1.3;
      transition: color var(--transition-fast);
    }
    .wizard-step::before {
      content: '';
      display: block;
      width: 38px;
      height: 38px;
      border-radius: 50%;
      background: var(--surface-darker);
      border: 2.5px solid var(--border);
      margin: 0 auto var(--space-sm);
      position: relative;
      z-index: 2;
      transition: all var(--transition-fast);
    }
    .wizard-step.active::before {
      background: var(--gradient-primary);
      border-color: var(--primary);
    }
    .wizard-step.completed::before {
      background: var(--gradient-accent);
      border-color: var(--accent-green);
    }
    .wizard-step.active { color: var(--primary); font-weight: 700; }
    .wizard-step.completed { color: var(--accent-green-dark); }
    .wizard-step:not(:last-child)::after {
      content: '';
      position: absolute;
      top: 19px;
      left: calc(50% + 23px);
      right: calc(-50% + 23px);
      height: 2.5px;
      background: var(--border);
      z-index: 1;
      transition: background var(--transition-fast);
    }
    .wizard-step.completed:not(:last-child)::after {
      background: linear-gradient(90deg, var(--accent-green), var(--accent-green-dark));
    }

    /* Page heading */
    .interview-heading {
      font-size: 1.4rem;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.02em;
      margin-bottom: var(--space-sm);
    }
    .interview-intro {
      color: var(--text-muted);
      font-size: 0.95rem;
      line-height: 1.6;
      margin-bottom: var(--space-2xl);
    }
    .interview-intro .required-note {
      color: #dc2626;
      font-weight: 600;
      font-size: 0.88rem;
    }

    /* Question cards */
    .question-card {
      background: var(--surface);
      border: 1.5px solid var(--border-light);
      border-radius: var(--radius-md);
      padding: var(--space-xl);
      margin-bottom: var(--space-xl);
      transition: border-color var(--transition-fast);
    }
    .question-card:hover {
      border-color: rgba(37, 99, 235, 0.18);
    }
    .question-card:focus-within {
      border-color: var(--primary-light);
      transform: translateY(-1px);
    }
    .question-card label strong {
      display: block;
      margin-bottom: var(--space-md);
      font-size: 1rem;
      color: var(--primary-dark);
      line-height: 1.5;
    }
    .question-card textarea {
      border: 1.5px solid var(--border);
      border-radius: var(--radius-sm);
      padding: var(--space-md);
      font-family: inherit;
      font-size: 0.95rem;
      line-height: 1.6;
      color: var(--text);
      background: var(--surface);
      transition: border-color var(--transition-fast);
      width: 100%;
      box-sizing: border-box;
      resize: vertical;
      min-height: 80px;
    }
    .question-card textarea:focus {
      border-color: var(--primary-light);
      outline: none;
    }

    /* Character count indicator */
    .char-count {
      font-size: 0.82em;
      color: var(--text-light);
      margin-top: var(--space-sm);
      transition: color var(--transition-fast);
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .char-count::before {
      content: '';
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--border);
      transition: background var(--transition-fast);
      flex-shrink: 0;
    }
    .char-count.good { color: var(--accent-green-dark); }
    .char-count.good::before { background: var(--accent-green); }
    .char-count.warning { color: var(--accent-orange); }
    .char-count.warning::before { background: var(--accent-orange); }

    /* Important information box */
    .important-box {
      background: linear-gradient(135deg, rgba(24, 70, 163, 0.03), rgba(37, 99, 235, 0.05));
      border-left: 4px solid var(--primary);
      padding: var(--space-xl);
      margin-bottom: var(--space-xl);
      border-radius: 0 var(--radius-md) var(--radius-md) 0;
      font-size: 0.95rem;
      line-height: 1.7;
      color: var(--text-muted);
    }
    .important-box strong {
      color: var(--primary-dark);
      font-size: 1rem;
      display: block;
      margin-bottom: var(--space-xs);
    }

    /* Submit button */
    .submit-btn-interview {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);
      padding: 12px 32px;
      font-size: 0.95rem;
      font-weight: 600;
      border-radius: var(--radius-sm);
      background: var(--gradient-primary);
      color: #fff;
      border: none;
      cursor: pointer;
      transition: all var(--transition-smooth);
      min-height: 44px;
      letter-spacing: 0.01em;
    }
    .submit-btn-interview:hover {
      transform: translateY(-2px);
    }
    .submit-btn-interview:focus-visible {
      outline: 2px solid var(--primary-light);
      outline-offset: 3px;
    }

    /* Back button */
    .back-btn {
      position: fixed;
      left: 2rem;
      top: 2rem;
      background: var(--surface);
      border: 1.5px solid var(--border);
      padding: 0.6rem 1.4rem;
      color: var(--primary);
      font-weight: 600;
      border-radius: var(--radius-sm);
      cursor: pointer;
      text-decoration: none;
      z-index: 1050;
      transition: all var(--transition-fast);
      font-size: 0.9rem;
    }
    .back-btn:hover {
      background: var(--surface-dark);
      border-color: var(--primary-light);
      transform: translateY(-2px);
    }

    /* Form actions */
    .form-actions {
      display: flex;
      justify-content: flex-end;
      margin-bottom: var(--space-2xl);
    }

    /* Responsive */
    @media (max-width: 700px) {
      .back-btn {
        position: static;
        display: block;
        width: 100%;
        max-width: 320px;
        margin: 0 auto var(--space-lg) auto;
        z-index: 1;
      }
      main.container { padding-top: 0 !important; }
      .wizard-step { font-size: 0.78rem; }
    }
    @media (max-width: 480px) {
      .back-btn { font-size: 0.9rem; padding: 0.5rem 1rem; }
      main.container { padding: 0 3vw !important; }
      .submit-btn-interview { width: 100%; }
      .form-actions { justify-content: stretch; }
      .question-card { padding: var(--space-lg); }
    }
    input, textarea, select { font-size: 16px !important; }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <a href="/" class="back-btn"
     onclick="if(document.referrer && document.referrer !== window.location.href){window.history.back();}else{window.location.href='/';} return false;">
    &#8592; Back
  </a>

  <main class="container" style="max-width: 760px;">
    <!-- Wizard progress -->
    <nav class="wizard-steps" aria-label="Application progress">
      <span class="wizard-step completed">1<br>Application Submitted</span>
      <span class="wizard-step active" aria-current="step">2<br>Interview Questions</span>
      <span class="wizard-step">3<br>Verify Identity</span>
      <span class="wizard-step">4<br>Complete</span>
    </nav>

    <!-- Page header -->
    <section>
      <h2 class="interview-heading">Interview Questions for <%= position %></h2>
      <p class="interview-intro">
        Please answer all questions thoroughly. This is a required step in the application process.<br>
        <span class="required-note">* All questions are required</span>
      </p>
    </section>

    <!-- Interview form -->
    <form id="interviewForm" action="/apply/interview" method="post">
      <% if (questions && questions.length) { %>
        <% questions.forEach(function(q, idx) { %>
          <div class="question-card">
            <label>
              <strong><%= q.label %></strong>
              <textarea name="<%= q.name %>" rows="4" required minlength="50"
                oninput="updateCharCount(this, 'count<%= idx + 1 %>')"></textarea>
            </label>
            <div class="char-count" id="cc<%= idx + 1 %>">
              Character count: <span id="count<%= idx + 1 %>">0</span> (minimum 50 characters recommended)
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="important-box" style="color: #dc2626;">
          No interview questions found for this position. Please contact support.
        </div>
      <% } %>

      <div class="important-box">
        <strong>Important Information</strong>
        Your responses will be reviewed by our hiring team. Please take time to provide thoughtful, detailed answers that showcase your qualifications and interest in this position.
      </div>

      <div class="form-actions">
        <button class="submit-btn-interview" type="submit">Continue to Verification &#8594;</button>
      </div>
    </form>
  </main>

  <script>
    function updateCharCount(textarea, countId) {
      var count = textarea.value.length;
      document.getElementById(countId).innerText = count;
      var idx = countId.replace('count', '');
      var el = document.getElementById('cc' + idx);
      if (el) {
        var cls = 'char-count';
        if (count >= 50) { cls += ' good'; }
        else if (count >= 30) { cls += ' warning'; }
        el.className = cls;
      }
    }
    Array.from(document.querySelectorAll('textarea')).forEach(function(textarea, idx) {
      updateCharCount(textarea, 'count' + (idx + 1));
    });
  </script>
</body>
</html>