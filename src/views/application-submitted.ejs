<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Application Submitted — Core Crew Logistics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
  <link rel="icon" type="image/jpeg" href="/public/img/logo.jpg" />
  <link rel="stylesheet" href="/public/styles.css" />
  <style>
    .wizard-steps { display: flex; justify-content: center; margin-bottom: 2.5rem; gap: 0; }
    .wizard-step { font-weight: 600; color: var(--text-light); text-align: center; font-size: 0.88rem; position: relative; flex: 1; padding: 0 var(--space-sm); line-height: 1.3; transition: color 0.3s; }
    .wizard-step::before { content: ''; display: block; width: 40px; height: 40px; border-radius: 50%; background: var(--surface-darker); border: 2.5px solid var(--border); margin: 0 auto var(--space-sm); position: relative; z-index: 2; transition: all 0.3s; }
    .wizard-step.active::before { background: var(--gradient-primary); border-color: var(--primary); box-shadow: 0 0 0 5px rgba(24,70,163,0.12), 0 4px 16px rgba(24,70,163,0.2); }
    .wizard-step.completed::before { background: var(--gradient-accent); border-color: var(--accent-green); box-shadow: 0 0 0 5px rgba(46,204,113,0.12), 0 4px 16px rgba(46,204,113,0.2); }
    .wizard-step.active { color: var(--primary); font-weight: 700; }
    .wizard-step.completed { color: var(--accent-green-dark); }
    .wizard-step:not(:last-child)::after { content: ''; position: absolute; top: 20px; left: calc(50% + 24px); right: calc(-50% + 24px); height: 2.5px; background: var(--border); z-index: 1; transition: background 0.3s; }
    .wizard-step.completed:not(:last-child)::after { background: linear-gradient(90deg, var(--accent-green), var(--accent-green-dark)); }

    .interview-heading {
      font-size: 1.35rem;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.02em;
      margin-bottom: var(--space-sm);
    }

    .question-card { background: var(--surface); border: 1.5px solid var(--border-light); border-radius: 16px; padding: var(--space-xl); margin-bottom: var(--space-xl); box-shadow: 0 2px 12px rgba(16,42,72,0.04); transition: border-color 0.2s, box-shadow 0.2s, transform 0.2s; }
    .question-card:hover { border-color: rgba(37,99,235,0.18); box-shadow: 0 4px 20px rgba(16,42,72,0.08); }
    .question-card:focus-within { border-color: var(--primary-light); box-shadow: 0 0 0 3px rgba(37,99,235,0.1), 0 4px 20px rgba(16,42,72,0.08); transform: translateY(-1px); }
    .question-card label strong {
      display: block;
      margin-bottom: var(--space-md);
      font-size: 1.02rem;
      color: var(--primary-dark);
      line-height: 1.5;
    }
    .question-card textarea {
      border: 1.5px solid var(--border);
      border-radius: 10px;
      padding: var(--space-md);
      transition: border-color 0.2s, box-shadow 0.2s;
      width: 100%;
      box-sizing: border-box;
      resize: vertical;
    }
    .question-card textarea:focus {
      border-color: var(--primary-light);
      box-shadow: 0 0 0 3px rgba(37,99,235,0.08);
      outline: none;
    }

    .char-count { font-size: 0.84em; color: var(--text-light); margin-top: 6px; transition: color 0.2s; display: flex; align-items: center; gap: 6px; }
    .char-count::before { content: ''; display: inline-block; width: 8px; height: 8px; border-radius: 50%; background: var(--border); transition: background 0.2s; flex-shrink: 0; }
    .char-count.good { color: var(--accent-green-dark); }
    .char-count.good::before { background: var(--accent-green); }
    .char-count.warning { color: var(--accent-orange); }
    .char-count.warning::before { background: var(--accent-orange); }

    .important-box { background: linear-gradient(135deg, rgba(24,70,163,0.03), rgba(37,99,235,0.05)); border-left: 4px solid var(--primary); padding: var(--space-xl); margin-bottom: var(--space-xl); border-radius: 0 12px 12px 0; font-size: 0.98rem; line-height: 1.7; }
    .important-box strong { color: var(--primary-dark); font-size: 1.02rem; }

    .submit-btn-interview {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);
      padding: 10px 28px;
      font-size: 0.95rem;
      font-weight: 600;
      border-radius: 8px;
      background: var(--gradient-primary);
      color: #fff;
      border: none;
      cursor: pointer;
      box-shadow: 0 2px 8px rgba(24,70,163,0.15);
      transition: all var(--transition-smooth);
      min-height: 42px;
      letter-spacing: 0.01em;
    }
    .submit-btn-interview:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(24,70,163,0.25);
    }
    .submit-btn-interview:focus-visible {
      outline: 2px solid var(--primary-light);
      outline-offset: 3px;
    }

    .back-btn {
      position: fixed;
      left: 2rem;
      top: 2rem;
      background: var(--surface);
      border: 1.5px solid var(--border);
      padding: 0.7rem 1.5rem;
      color: var(--primary);
      font-weight: bold;
      border-radius: 10px;
      cursor: pointer;
      text-decoration: none;
      z-index: 1050;
      box-shadow: 0 2px 12px rgba(16,42,72,0.08);
      transition: all 0.2s;
    }
    .back-btn:hover {
      background: var(--surface-dark);
      border-color: var(--primary-light);
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(16,42,72,0.12);
    }
    @media (max-width: 700px) {
      .back-btn {
        position: static;
        display: block;
        width: 100%;
        max-width: 320px;
        margin: 0 auto 1rem auto;
        top: unset;
        left: unset;
        z-index: 1;
      }
      .container {
        padding-top: 0 !important;
      }
      main.container {
        padding-top: 0 !important;
      }
    }
    @media (max-width: 480px) {
      .back-btn {
        font-size: 1rem;
        padding: 0.5rem 1rem;
      }
      main.container {
        padding: 0 3vw !important;
      }
      .submit-btn-interview { width: 100%; }
    }
    input, textarea, select {
      font-size: 16px !important;
    }
    textarea {
      min-height: 80px;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <a href="/" class="back-btn"
     onclick="if(document.referrer && document.referrer !== window.location.href){window.history.back();}else{window.location.href='/';} return false;">
    &#8592; Back
  </a>
  <main class="container" style="max-width: 760px;">
    <div class="wizard-steps">
      <span class="wizard-step completed">1<br>Application Submitted</span>
      <span class="wizard-step active">2<br>Interview Questions</span>
      <span class="wizard-step">3<br>Verify Identity</span>
      <span class="wizard-step">4<br>Complete</span>
    </div>

    <h2 class="interview-heading">Interview Questions for <%= position %></h2>
    <p>Please answer all questions thoroughly. This is a required step in the application process.<br>
    <span style="color:red;">* All questions are required</span></p>

    <form id="interviewForm" action="/apply/interview" method="post">
      <% if (questions && questions.length) { %>
        <% questions.forEach(function(q, idx) { %>
          <div class="question-card">
            <label>
              <strong><%= q.label %></strong>
              <textarea name="<%= q.name %>" rows="4" required minlength="50"
                oninput="updateCharCount(this, 'count<%= idx+1 %>')"></textarea>
            </label>
            <div class="char-count" id="cc<%= idx+1 %>">Character count: <span id="count<%= idx+1 %>">0</span> (minimum 50 characters recommended)</div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="important-box" style="color:red;">
          No interview questions found for this position. Please contact support.
        </div>
      <% } %>

      <div class="important-box">
        <strong>Important Information</strong><br>
        Your responses will be reviewed by our hiring team. Please take time to provide thoughtful, detailed answers that showcase your qualifications and interest in this position.
      </div>

      <div class="actions" style="margin-bottom: 2rem;">
        <button class="submit-btn-interview" type="submit">Continue to Verification →</button>
      </div>
    </form>
  </main>
  <script>
    function updateCharCount(textarea, countId) {
      var count = textarea.value.length;
      document.getElementById(countId).innerText = count;
      var idx = countId.replace('count','');
      var el = document.getElementById('cc' + idx);
      if(el) {
        var cls = 'char-count';
        if (count >= 50) { cls += ' good'; }
        else if (count >= 30) { cls += ' warning'; }
        el.className = cls;
      }
    }
    Array.from(document.querySelectorAll('textarea')).forEach(function(textarea, idx) {
      updateCharCount(textarea, 'count' + (idx + 1));
    });
  </script>
</body>
</html>