<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jobs & Careers — Core Crew Logistics</title>
    <link rel="stylesheet" href="/public/styles.css" />
    <style>
      .job-listing {
        border-bottom: 1.5px solid var(--border);
        padding: 28px 0 22px 0;
        display: flex;
        flex-direction: column;
        gap: 4px;
      }
      .job-header {
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
      }
      .job-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--primary-dark);
      }
      .job-type {
        background: var(--surface-dark);
        color: var(--primary);
        font-size: 0.99rem;
        font-weight: 600;
        border-radius: 6px;
        padding: 2px 12px;
        margin-left: 0;
      }
      .job-actions {
        margin-top: 10px;
        display: flex;
        gap: 12px;
      }
      .job-actions a {
        border-radius: 8px;
        padding: 7px 18px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.18s;
        font-size: 1rem;
        background: var(--primary);
        color: #fff;
      }
      .job-actions a.details {
        background: var(--accent-green);
        color: #fff;
      }
      @media (max-width: 600px) {
        .job-header { flex-direction: column; gap: 8px; }
        .job-actions { flex-direction: column; gap: 7px; }
        .job-listing { padding: 18px 0 14px 0; }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="brand">
          <img class="logo" src="/public/img/logo.jpg" alt="Core Crew Logistics Logo" />
          <span>Core Crew Logistics</span>
        </div>
        <nav>
          <a class="btn ghost" href="/">Home</a>
          <a class="btn ghost" href="/about">About</a>
          <a class="btn ghost" href="/services">Services</a>
          <a class="btn primary" href="/apply">Apply Now</a>
          <a class="btn ghost" href="/jobs">Jobs</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <div style="margin-top:36px; margin-bottom:36px;">
        <a href="/" class="btn ghost">
          &larr; Back to Homepage
        </a>
      </div>
      <section class="card">
        <h2>Open Positions</h2>
        <p>Click the position title to view details or apply. All positions may be available as <strong>Full Time</strong> or <strong>Part Time</strong>.</p>
        <% Object.entries(jobDetails).forEach(function([key, job]) { %>
          <div class="job-listing">
            <div class="job-header">
              <a href="/jobs/<%= key %>" class="job-title"><%= job.title %></a>
              <span class="job-type"><%= job.type %></span>
              <% if (job.category) { %>
                <span class="job-type" style="background:var(--accent-orange);color:#fff;"><%= job.category %></span>
              <% } %>
            </div>
            <div class="job-actions">
              <a href="/jobs/<%= key %>" class="details">View Details</a>
              <a href="/apply?position=<%= encodeURIComponent(job.title) %>" class="btn primary">Apply Now</a>
            </div>
          </div>
        <% }) %>
      </section>
    </main>
    <footer class="site-footer">
      <div class="container">© <%= new Date().getFullYear() %> Core Crew Logistics</div>
    </footer>
  </body>
</html>