    <link rel="stylesheet" href="/public/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <style>
      html, body {
        font-size: 15px;
      }
      @media (max-width: 768px) {
        html, body {
          font-size: 13px;
        }
      }
      @media (max-width: 480px) {
        html, body {
          font-size: 12px;
        }
      }
      /* Footer background color change to black */
      .site-footer {
        background: #000 !important;
      }
      /* Center copyright text */
      .footer-bottom {
        width: 100%;
        text-align: center !important;
        margin: 0 auto;
        padding: 10px 0 4px 0;
        color: #fff;
        font-size: .95rem;
      }
      /* Quick Apply Floating Button styles */
      .quick-apply-float-btn {
        position: fixed;
        right: 22px;
        bottom: 40px;
        z-index: 2001;
        background: var(--accent-green);
        color: #fff;
        border-radius: 100px;
        padding: 13px 26px;
        font-size: 1.05rem;
        font-weight: 700;
        box-shadow: 0 6px 24px 0 rgba(24, 70, 163, 0.22);
        border: none;
        cursor: pointer;
        transition: background 0.2s, box-shadow 0.2s;
      }
      .quick-apply-float-btn:hover {
        background: var(--primary-light);
        color: #fff;
        box-shadow: 0 12px 32px 0 rgba(24, 70, 163, 0.18);
      }
      .quick-apply-modal-bg {
        display: none;
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: rgba(24, 70, 163, 0.2);
        backdrop-filter: blur(4px);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        padding: var(--space-md);
      }
      .quick-apply-modal-bg.active {
        display: flex;
      }
      .quick-apply-modal-content {
        background: white;
        border-radius: 10px;
        box-shadow: 0 12px 38px rgba(24, 70, 163, 0.17);
        padding: var(--space-md);
        width: 100%;
        max-width: 320px;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
      }
      .quick-apply-modal-close {
        position: absolute;
        right: var(--space-sm);
        top: var(--space-sm);
        font-size: 1.1rem;
        color: var(--text-muted);
        cursor: pointer;
        background: none;
        border: none;
        font-weight: 700;
        transition: color 0.2s ease;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .quick-apply-modal-close:hover {
        color: var(--primary);
      }
      .quick-apply-card {
        display: none !important;
      }
      @media (max-width: 768px) {
        .quick-apply-float-btn {
          right: 10px;
          bottom: 10px;
          font-size: 1rem;
          padding: 10px 15px;
        }
        .quick-apply-modal-content {
          max-width: 95vw;
        }
      }
      @media (max-width: 600px) {
        .quick-apply-float-btn {
          font-size: 0.98rem;
          padding: 8px 10px;
        }
      }

      /* --- NOW HIRING BANNER --- */
      .now-hiring-banner {
        width: 100%;
        background: linear-gradient(90deg, #f7b731 0%, #2ecc71 100%);
        color: #1846a3;
        text-align: center;
        font-weight: 700;
        letter-spacing: 0.03em;
        font-size: 1.13rem;
        padding: 11px 0 10px 0;
        margin: 0 auto;
        border-bottom: 1px solid #e5e9f2;
        position: relative;
        z-index: 999;
      }
      .now-hiring-banner span {
        display: inline-block;
        vertical-align: middle;
      }
      @media (max-width: 768px) {
        .now-hiring-banner {
          font-size: 1.01rem;
          padding: 10px 0 9px 0;
        }
      }
      @media (max-width: 480px) {
        .now-hiring-banner {
          font-size: 0.98rem;
          padding: 8px 0 7px 0;
        }
      }

      /* --- HEADER LOGO & TEXT SIZE OVERRIDE --- */
      .site-header .brand {
        font-size: 1.45rem;
        gap: 11px;
      }
      .site-header .logo {
        width: 44px;
        height: 44px;
        border-radius: 8px;
      }
      @media (max-width: 768px) {
        .site-header .brand {
          font-size: 1.18rem;
          gap: 8px;
        }
        .site-header .logo {
          width: 34px;
          height: 34px;
        }
      }
      @media (max-width: 480px) {
        .site-header .brand {
          font-size: 1.05rem;
          gap: 7px;
        }
        .site-header .logo {
          width: 27px;
          height: 27px;
        }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="brand">
          <img class="logo" src="/public/img/logo.jpg" alt="Core Crew Logistics Logo" />
          <span>Core Crew Logistics</span>
        </div>
        <nav>
          <a href="/about" class="btn ghost">About</a>
          <a href="/services" class="btn ghost">Services</a>
          <a href="/jobs" class="btn ghost">Jobs</a>
        </nav>
      </div>
    </header>
    <!-- NOW HIRING BANNER START -->
    <div class="now-hiring-banner">
      <span>ðŸšš NOW HIRING: Drivers, Dispatchers, Warehouse Staff &amp; More! <a href="/apply" style="color:#1846a3;text-decoration:underline;font-weight:700;margin-left:8px;">Apply Today</a></span>
    </div>
    <!-- NOW HIRING BANNER END -->
    <main class="container">
      <section class="hero">
        <div class="copy">
          <h2 class="hero-title">Drive the Future of Logistics</h2>
          <p class="hero-desc">
            We streamline freight, warehousing, and last-mile delivery with dependable people and modern technology. Join us to keep supply chains moving smoothly and efficiently.
          </p>
          <div class="actions">
            <a href="/apply" class="btn primary">Apply Now</a>
            <a href="/jobs" class="btn primary">Browse Open Positions</a>
            <a href="/about" class="btn ghost">Learn More</a>
          </div>
        </div>
        <div class="panel">
        </div>
      </section>
      <section class="stats-section">
        <div class="stats-grid">
          <div class="stat">
            <div class="stat-icon years">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#1846a3" width="36" height="36">
                <rect width="18" height="14" x="3" y="7" stroke-width="2" rx="2"/>
                <path stroke-width="2" d="M16 3v4M8 3v4"/>
              </svg>
            </div>
            <div class="stat-number" data-target="10">0</div>
            <div class="stat-label">Years of Service</div>
          </div>
          <div class="stat">
            <div class="stat-icon employees">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#1846a3" width="36" height="36">
                <circle cx="9" cy="8" r="4" stroke-width="2"/>
                <circle cx="17" cy="12" r="3" stroke-width="2"/>
                <path stroke-width="2" d="M2 20c0-3.314 3.134-6 7-6s7 2.686 7 6"/>
                <path stroke-width="2" d="M17 15c2.21 0 4 1.343 4 3"/>
              </svg>
            </div>
            <div class="stat-number" data-target="300">0</div>
            <div class="stat-label">Employees</div>
          </div>
          <div class="stat">
            <div class="stat-icon states">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#1846a3" width="36" height="36">
                <circle cx="12" cy="12" r="10" stroke-width="2"/>
                <path stroke-width="2" d="M2 12h20M12 2c3.866 0 7 4.477 7 10s-3.134 10-7 10-7-4.477-7-10 3.134-10 7-10z"/>
              </svg>
            </div>
            <div class="stat-number" data-target="50">0</div>
            <div class="stat-label">States Served</div>
          </div>
          <div class="stat">
            <div class="stat-icon clients">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#1846a3" width="36" height="36">
                <rect width="18" height="12" x="3" y="7" stroke-width="2" rx="2"/>
                <path stroke-width="2" d="M16 7V5a4 4 0 00-8 0v2"/>
              </svg>
            </div>
            <div class="stat-number" data-target="500">0</div>
            <div class="stat-label">Clients</div>
          </div>
        </div>
      </section>
      <section class="section section-centered">
        <h3 class="section-title">What We Do</h3>
        <div class="grid-3 what-we-do-grid">
          <div class="card">
            <h4>Dispatch & Coordination</h4>
            <p>Efficient route planning and 24/7 dispatch to keep your freight on schedule.</p>
          </div>
          <div class="card">
            <h4>Warehousing & Fulfillment</h4>
            <p>Secure storage, inventory control, and accurate pick/pack for seamless operations.</p>
          </div>
          <div class="card">
            <h4>Customer Support</h4>
            <p>Clear communication and proactive updates for a best-in-class client experience.</p>
          </div>
        </div>
      </section>
      <section class="contact-plain contact-left-extreme">
        <h3 class="contact-heading-left">Get in Touch</h3>
        <div class="contact-content-left">
          <p class="contact-intro-left">
            Have questions about working at corecrewlogistics? We'd love to hear from you and discuss how you can be part of our mission.
          </p>
          <ul class="contact-info-list-left">
            <li>
              <span class="contact-label-left">Phone:</span>
              <a href="tel:+13105742415" class="contact-link-left">310.574.2415</a>
            </li>
            <li>
              <span class="contact-label-left">Email:</span>
              <a href="mailto:corecrewlogistics@gmail.com" class="contact-link-left">corecrewlogistics@gmail.com</a>
            </li>
          </ul>
        </div>
      </section>

      <!-- Quick Apply Floating Button & Modal -->
      <button class="quick-apply-float-btn" id="quickApplyFloatBtn" aria-label="Quick Apply">
        Quick Apply
      </button>
      <div class="quick-apply-modal-bg" id="quickApplyModalBg">
        <div class="quick-apply-modal-content">
          <button class="quick-apply-modal-close" id="quickApplyModalClose" aria-label="Close">&times;</button>
          <h3 style="color:#1846a3;margin-bottom:10px;">Quick Apply</h3>
          <div style="color:#1846a3; font-weight: 600; font-size: 1.01rem; margin-bottom:7px;">
            Don't see the perfect role? Submit your resume and we'll reach out when opportunities arise.
          </div>
          <form action="/apply/start" method="POST" enctype="multipart/form-data" class="quick-apply-form">
            <label for="qa-firstName">First Name</label>
            <input type="text" id="qa-firstName" name="firstName" required />
            <label for="qa-lastName">Last Name</label>
            <input type="text" id="qa-lastName" name="lastName" required />
            <label for="qa-email">Email</label>
            <input type="email" id="qa-email" name="email" required />
            <label for="qa-phone">Phone</label>
            <input type="text" id="qa-phone" name="phone" required />
            <label for="qa-position">Position Interested In</label>
            <input type="text" id="qa-position" name="position" placeholder="E.g. Logistics Coordinator" required />
            <label for="qa-coverLetter">Message / Cover Letter</label>
            <textarea id="qa-coverLetter" name="coverLetter" rows="3"></textarea>
            <label for="qa-resume">Upload Resume</label>
            <input type="file" id="qa-resume" name="documents" accept=".pdf,.doc,.docx" required />
            <button type="submit" class="btn primary">Submit Application</button>
          </form>
        </div>
      </div>
      <script>
        // Modal logic for floating button
        const floatBtn = document.getElementById('quickApplyFloatBtn');
        const modalBg = document.getElementById('quickApplyModalBg');
        const modalClose = document.getElementById('quickApplyModalClose');
        floatBtn.addEventListener('click', function() {
          modalBg.classList.add('active');
        });
        modalClose.addEventListener('click', function() {
          modalBg.classList.remove('active');
        });
        modalBg.addEventListener('click', function(e) {
          if (e.target === modalBg) modalBg.classList.remove('active');
        });
      </script>
      <script src="/public/modal.js"></script>
      <script src="/public/stat-counter.js"></script>
    </main>
